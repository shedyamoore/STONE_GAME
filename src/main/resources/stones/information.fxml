<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stones.controllers.InformationController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: orange;">
         <children>
            <Label fx:id="label" text="Welcome to Stone Game">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="22.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="110.0" text="First Player">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="firstPlayerField" prefHeight="25.0" prefWidth="127.0">
                     <HBox.margin>
                        <Insets bottom="2.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="22.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="110.0" text="Second Player">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="secondPlayerField" prefHeight="25.0" prefWidth="127.0">
                     <HBox.margin>
                        <Insets bottom="2.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="startBtn" mnemonicParsing="false" onAction="#onStart" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: red;" text="Continue &gt; " />
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#onBackBtnClicked" style="-fx-background-color: red;" text="&lt;" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
         <padding>
            <Insets bottom="2.0" left="10.0" right="10.0" top="2.0" />
         </padding>
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
