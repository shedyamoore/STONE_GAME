<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stones.controllers.HomeController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: orange;">
         <children>
            <Label fx:id="label" text="Welcome to Stone Game">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Button fx:id="start" mnemonicParsing="false" onAction="#onStart" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: red;" text="Start">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="start1" mnemonicParsing="false" onAction="#onHighScoreBtnClicked" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: red;" text="High Score" />
         </children>
      </VBox>
   </children>
</AnchorPane>
